@model ArtGallery2.Models.Inventory.PieceDto

@Scripts.Render( "~/bundles/jquery" )
@Scripts.Render( "~/bundles/jqueryval" )


@{
    // The attribute enctype="multipart/form-data" is required
    // if you are sending files as part of the HTTP POST request
    // Must have it to upload images!!!
}
@using( Html.BeginForm( "Create", "Image", new {
    id = Model.pieceId
}, FormMethod.Post, new {
    enctype = "multipart/form-data"
} ) ) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Image</h4>
        <hr />

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor( model => model.pieceName )
            </dt>
            <dd>
                @Html.DisplayFor( model => model.pieceName )
            </dd>
        </dl>

        @Html.ValidationSummary( true, "", new {
            @class = "text-danger"
        } )

        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-12">Choose Image: </div>
                <div class="col-md-12"><input type="file" name="imageData" /></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Image" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink( "Back to Images", "Images", new {
        id = Model.pieceId
    } ) |
    @Html.ActionLink( "Back to Piece", "../Piece/Details", new {
        id = Model.pieceId
    } )
</div>
