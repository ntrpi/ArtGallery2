@model ArtGallery2.Models.Inventory.FormDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Confirm Delete</h2>

<div>
    <h3>Are you sure you want to delete this form?</h3>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor( model => model.formName )
        </dt>

        <dd>
            @Html.DisplayFor( model => model.formName )
        </dd>

    </dl>

    @using( Html.BeginForm( "Delete", "Form", new {
        id = Model.formId
    } ) ) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink( "Back to List", "List" )
        </div>
    }
</div>
